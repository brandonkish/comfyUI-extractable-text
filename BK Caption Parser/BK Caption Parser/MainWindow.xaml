<Window x:Class="BK_Caption_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowDrop="True"
        Drop="Window_Drop"
        Title="Image Set Editor" Width="1200" Height="800">

    <Grid>
        <!-- LIST VIEW -->
        <Grid x:Name="ListViewGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Slider x:Name="SizeSlider"
                    Minimum="100" Maximum="400"
                    Value="200"
                    Margin="10"/>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding ImageSets}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" Margin="5">
                                <StackPanel Orientation="Horizontal"
                                            MouseLeftButtonUp="ImageSet_Clicked">

                                    <!-- Original Image -->
                                    <Image Width="{Binding ElementName=SizeSlider, Path=Value}"
                                           Height="{Binding ElementName=SizeSlider, Path=Value}"
                                           Source="{Binding OriginalImage}"
                                           Margin="5"/>

                                    <!-- Caption Image -->
                                    <Image Width="{Binding ElementName=SizeSlider, Path=Value}"
                                           Height="{Binding ElementName=SizeSlider, Path=Value}"
                                           Source="{Binding CaptionImage}"
                                           Margin="5"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- EDIT VIEW -->
        <Grid x:Name="EditViewGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel>
                <Button Content="DELETE"
                        Background="Red"
                        Foreground="White"
                        DockPanel.Dock="Left"
                        Click="Delete_Click"
                        Padding="10"/>
                <Button Content="Back"
                        DockPanel.Dock="Right"
                        Click="Back_Click"
                        Padding="10"/>
            </DockPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <!-- Original Image in Edit View -->
                <Image Width="400" Height="400" Source="{Binding SelectedSet.OriginalImage}"/>
                <!-- Caption Image in Edit View -->
                <Image Width="400" Height="400" Source="{Binding SelectedSet.CaptionImage}"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding SelectedSet.CaptionText}" AcceptsReturn="True"/>
                <StackPanel Grid.Column="1">
                    <Label Content="Change the caption so that..."/>
                    <TextBox Text="{Binding SelectedSet.CaptionChangeText}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>

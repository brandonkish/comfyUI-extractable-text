<Window x:Class="BK_Caption_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BK_Caption_Parser"
        AllowDrop="True"
        Drop="Window_Drop"
        Title="Image Set Editor" Width="1200" Height="800">

    <!-- Register the BitmapImageConverter -->
    <Window.Resources>
        <local:BitmapImageConverter x:Key="BitmapImageConverter"/>
    </Window.Resources>

    <Grid>
        <!-- LIST VIEW -->
        <Grid x:Name="ListViewGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Slider x:Name="SizeSlider"
                    Minimum="100" Maximum="9999"
                    Value="200"
                    Margin="10"/>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding ImageSets}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="1" Margin="5">
                                <StackPanel Orientation="Horizontal">

                                    <Button Content="Delete"
                                                Width="75"
                                                Background="Red"
                                                Foreground="White"
                                                VerticalAlignment="Stretch"
                                                HorizontalAlignment="Left"
                                                Margin="5"
                                                Click="Delete_Click"/>
                                    
                                    <!-- Original Image -->
                                    <Image Width="{Binding ElementName=SizeSlider, Path=Value}"
                                           Height="{Binding ElementName=SizeSlider, Path=Value}"
                                           Source="{Binding OriginalImage, Converter={StaticResource BitmapImageConverter}}"
                                           Margin="5"/>

                                    <!-- Caption Image -->
                                    <Image Width="{Binding ElementName=SizeSlider, Path=Value}"
                                           Height="{Binding ElementName=SizeSlider, Path=Value}"
                                           Source="{Binding CaptionImage, Converter={StaticResource BitmapImageConverter}}"
                                           Margin="5"/>

                                    <!-- TextBox next to the images -->
                                    <TextBox Width="{Binding ElementName=SizeSlider, Path=Value}"
                                             Height="{Binding ElementName=SizeSlider, Path=Value}"
                                             Text="{Binding CaptionChangeText, Mode=TwoWay}" 
                                             Margin="5" 
                                             VerticalAlignment="Center" 
                                             HorizontalAlignment="Center"
                                             LostFocus="CaptionTextBox_LostFocus"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

<Window x:Class="METAVACE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PNG JSON Metadata Viewer"
        Height="600"
        Width="800"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop"
        Background="#f0f0f0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border x:Name="DropZone"
                HorizontalAlignment="Stretch"
                BorderBrush="DarkGray"
                BorderThickness="2"
                Background="#FFEFEFEF"
                Margin="20,20,20,0"
                VerticalAlignment="Stretch"
                CornerRadius="10"
                AllowDrop="True"
                DragOver="Window_DragOver"
                Drop="Window_Drop">
            <TextBlock Text="Drop PNG Here"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="Gray" />
        </Border>
        
        <Border x:Name="ListView"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                BorderBrush="DarkGray"
                BorderThickness="2"
                Background="#FFEFEFEF"
                Margin="20,20,20,0"
                VerticalAlignment="Stretch"
                CornerRadius="10"
                AllowDrop="True"
                DragOver="Window_DragOver"
                Drop="Window_Drop">
            <ScrollViewer 
                          VerticalScrollBarVisibility="Auto"
                          Margin="5"
                          DragOver="Window_DragOver"
                          AllowDrop="True"
                          Drop="Window_Drop">
                <TextBox x:Name="Description"
                         AllowDrop="True"
                         FontWeight="DemiBold"
                         DragOver="Window_DragOver"
                         Drop="Window_Drop"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Left"
                         Width="730"
                         TextWrapping="WrapWithOverflow"
                         Margin="5"
                         Background="#f4f4f4"
                         BorderBrush="#CCCCCC"
                         BorderThickness="0"
                         IsReadOnly="True"
                         FontSize="16"
                         Padding="5,0"
                         HorizontalContentAlignment="Left" />
            </ScrollViewer>
        </Border>
        <Border x:Name="MessageBoxBorder"
                Grid.Row="3"
                HorizontalAlignment="Stretch"
                BorderBrush="DarkGray"
                BorderThickness="2"
                Background="#FFEFEFEF"
                Margin="20,20,20,20"
                VerticalAlignment="Stretch"
                CornerRadius="10"
                AllowDrop="True"
                DragOver="Window_DragOver"
                Drop="Window_Drop">
            <TextBox x:Name="MessageBox"
                     FontWeight="DemiBold"
                     Height="25"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Margin="5"
                     Background="#f4f4f4"
                     BorderBrush="#CCCCCC"
                     BorderThickness="0"
                     IsReadOnly="True"
                     FontSize="16"
                     Padding="5,0"
                     
                     
                     HorizontalContentAlignment="Left"
                     />
        </Border>
    </Grid>
</Window>

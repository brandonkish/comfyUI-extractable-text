<Window x:Class="AI_Toolkit_Log_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Toolkit Log Parser" Height="400" Width="600">
    <Grid>
        <!-- Load and Save Buttons -->
        <Button Content="Load Log" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10" Click="LoadLogButton_Click"/>
        <Button Content="Save List" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,40,0,0" Click="SaveListButton_Click"/>

        <!-- Search Bar -->
        <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,80,0,0" TextChanged="SearchTextBox_TextChanged" />

        <!-- ListView for displaying the parsed data -->
        <ListView x:Name="LogListView" Margin="10,110,10,10" >
            <!-- GridView for displaying columns -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding FileName}" Width="200"/>
                    <GridViewColumn Header="Loss" DisplayMemberBinding="{Binding Loss}" Width="100"/>
                    <GridViewColumn Header="Step" DisplayMemberBinding="{Binding Step}" Width="75"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>

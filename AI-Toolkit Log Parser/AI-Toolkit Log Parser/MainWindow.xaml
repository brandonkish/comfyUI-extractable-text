<Window x:Class="AI_Toolkit_log_parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Safetensor Log Parser" Height="500" Width="800" AllowDrop="True"
        DragEnter="Window_DragEnter" Drop="Window_Drop">
    <Grid>
        <!-- Statistics TextBlock -->
        <TextBlock Name="StatsTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="760" Margin="10,10,10,0" />

        <!-- Search Box to filter the DataGrid -->
        <TextBox Name="SearchBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="10,30,10,0" TextChanged="SearchBox_TextChanged" />

        <!-- DataGrid to Display the Safetensor Data -->
        <DataGrid Name="ResultsDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Width="760" Height="350" Margin="10,50,10,0" AutoGenerateColumns="False" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Safetensor Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Loss Value" Binding="{Binding Loss}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button to Save the Results to a File -->
        <Button Name="SaveButton" Content="Save List" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,400,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>

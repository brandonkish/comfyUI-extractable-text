<Window x:Class="BK_Masker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BK Masker" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown"
        PreviewMouseRightButtonDown="Window_PreviewMouseRightButtonDown"
        PreviewMouseLeftButtonUp="Window_PreviewMouseLeftButtonUp"
        PreviewMouseDown="Window_PreviewMouseDown"
        MouseMove="Window_MouseMove"
        AllowDrop="True"
        PreviewDragOver="Window_PreviewDragOver"
        PreviewMouseUp="Window_PreviewMouseUp"
        Drop="Window_Drop"
        SizeChanged="Window_SizeChanged">
    <!-- Use Canvas to allow drawing on top of the Image -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>

        </Grid.ColumnDefinitions>
        
        <Canvas Name="ImageCanvas" 
                Grid.ColumnSpan="3"
                AllowDrop="True">
            <Image Name="ImageDisplay"/>
        </Canvas>

        <Button Name="DeleteBtn"
                Grid.Column="2"
                Height="25"
                VerticalAlignment="Top"
                Click="DeleteBtn_Click"
                Content="DELETE"/>
        <StackPanel Grid.Column="0">
            <CheckBox Name="MoveOnly"
                  
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Click="AddMask_Click"
                  Content="Sort Only (No Masking)"/>
            <CheckBox Name="MoveMode"
                  
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Content="Move Mode"/>
        </StackPanel>

    </Grid>

</Window>
